<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- Correct path to CSS file -->
    <title>User List</title>
  </head>
  <body>
    <h1>User List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Avatar</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <img src="<%= user.avatar %>" alt="<%= user.name %>" width="50" />
          </td>
          <td><a href="/admin/user/<%= user.id %>">View Details</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin">Back to Home</a>
  </body>
</html>
